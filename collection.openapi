                        availableSeats: 227
                        status: "SCHEDULED"
                        airline:
                          code: "LX"
                          name: "Swiss International Air Lines"
                        origin:
                          code: "ZRH"
                          name: "Zurich Airport"
                          city: "Zurich"
                          country: "Switzerland"
                        destination:
                          code: "MNL"
                          name: "Ninoy Aquino International Airport"
                          city: "Manila"
                          country: "Philippines"
                      - id: "4c1f8110-5e58-4b4d-8c13-ed747b5d0e35"
                        flightNumber: "PR5631"
